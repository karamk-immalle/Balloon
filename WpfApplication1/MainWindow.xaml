<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="329" Margin="188,10,0,0" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <Button x:Name="MoveUp_Button" Content="MoveUp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,10,0,0" Click="Move_Button_Click"/>
        <Button x:Name="Grow_Button" Content="Grow" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="80,10,0,0" Click="Grow_Button_Click"/>
        <Button x:Name="MoveDown_button" Content="MoveDown" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,35,0,0" Click="MoveDown_button_Click"/>

    </Grid>
</Window>
